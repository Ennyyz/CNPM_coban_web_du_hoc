@model IEnumerable<WebApplication1.Models.ThongTinDuHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <meta charset="UTF-8">

}

<style>
    table {
        margin: 2% 8%;
    }

    img {
        width: 100%;
    }
</style>
<table align="center">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <b>@Html.DisplayFor(modelItem => item.TenThongTinDuHoc)</b><br />
                @Html.ActionLink("Xem thêm", "Details", new { id = item.MaTTDH })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTruong)<br />
                @Html.DisplayFor(modelItem => item.DiaChiTruong)<br />
                @Html.DisplayFor(modelItem => item.BacHoc.TenBacHoc)
            </td>
        </tr>
    }
</table>
